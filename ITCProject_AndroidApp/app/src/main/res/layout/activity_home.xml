<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".HomeActivity"
    android:background="@drawable/home_background">

    <LinearLayout

        android:layout_width="410dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="top"
        android:elevation="5dp"
        android:background="@drawable/rectangle_home"
        android:layout_marginTop="86dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="141dp"
            android:background="@drawable/rectangle_welcome"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/quicksand"
                android:textColor="@color/black"
                android:text="Welcome"
                android:textSize="30sp" />
            <TextView
                android:id="@+id/tv_getEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="70dp"
                android:padding="10dp"
                android:textColor="@color/black"
                android:fontFamily="@font/quicksand"
                />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/account_profile"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dwika Store"
            android:fontFamily="@font/permanent_marker"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_marginTop="25dp"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:text="Your perfect choice for buy or sell your item\nWe also provide many promo that will update every week.\nSo feel free to see and check Our item with click the button below"
            android:fontFamily="@font/poppins"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="20dp"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:fontFamily="@font/poppins"
            android:textAlignment="center"
            android:text="Dwika Store was found on 2021, when the founder Dwika Putra is still a student in UPN Veteran Yogyakarta. This app will doing improvement to make costumer feel happy while using this app"
            />
        <Button
            android:id="@+id/btn_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/green_light"
            android:layout_marginTop="40dp"
            android:text="Check The Item"
            android:textColor="@color/white"
            />
    </LinearLayout>

</LinearLayout>