<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".OrderActivity"
    android:background="@drawable/home_background"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rectangle_order"
        android:layout_marginTop="90dp"
        android:gravity="center_horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rectangle_ordertext">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="141dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/quicksand"
                    android:textColor="@color/black"
                    android:text="Thank You!"
                    android:textSize="30sp" />
                <TextView
                    android:id="@+id/tv_getEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="70dp"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/quicksand"
                    />
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="270dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/account_profile"
                    />
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your order are being \nprepared!"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:layout_marginTop="40dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="For Further Update, please click button below"
                android:textAlignment="center"
                android:textSize="14sp"
                android:textColor="#808080"
                android:layout_marginTop="90dp"
                />

        </LinearLayout>

        <Button
            android:id="@+id/btn_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Further Information"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/green_light"
            />


    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Follow Us"
        android:textColor="@color/white"
        android:textSize="16sp"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="90dp"
        >
        <TableRow>
            <ImageButton
                android:id="@+id/imgBtn_instagram"
                android:layout_width="231dp"
                android:layout_height="50dp"
                android:src="@drawable/iconig"
                android:background="#00FFFFFF"
                android:layout_weight="2"
                />
            <ImageButton
                android:id="@+id/imgBtn_twitter"
                android:layout_width="231dp"
                android:layout_height="50dp"
                android:background="#00FFFFFF"
                android:src="@drawable/icontwitter"
                android:layout_weight="2"
                />
        </TableRow>
    </TableLayout>


</LinearLayout>